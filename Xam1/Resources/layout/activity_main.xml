
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Witaj w apce, gościu."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <Button
        android:text="ELO XD"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:id="@+id/elo" />
    <Button
        android:text="OBRAZKY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/elo"
        android:id="@+id/obrazky" />
    <Button
      android:text="Galeria Picker"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/obrazky"
      android:id="@+id/gallery" />
    <Button
        android:text="test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gallery"
        android:id="@+id/test" />
    <Button
      android:text="LOGIN"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal = "true"
      android:layout_below="@id/test"
      android:id="@+id/login" />
    <CheckBox
        android:text="Jestem robotem."
        android:onClick="ckb_OnClick"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:id="@+id/checkBox1" />
    <TextView
        android:text="0"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox1"
        android:id="@+id/stan" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stan"
        android:id="@+id/listView1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/furnitureStr"
        android:layout_below="@id/listView1"/>

</RelativeLayout>